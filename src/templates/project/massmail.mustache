<div id="massmail-project-members" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <form id="massmail_form" name="massmail_form" action="{{ action }}" method="POST">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 id="myModalLabel">{{ title }}</h3>
        </div>
        <div class="modal-body">
            <input id="massmail-project-members-project-id" type="hidden" name="group_id" value="" />
            {{{ csrf_token }}}
            <p>
                <label class="mass-mail-form-label" type="text" name="subject_label" >{{ subject_label }}</label><br />
                <input class="mass-mail-form" type="text" name="subject" required />
            </p>
            <p>
                <label class="mass-mail-form-label" type="text" name="body_label" >{{ body_label }}</label><br />
                <textarea class="widget_myprojects_editor" id="editor" cols="10" rows="10"  name="body"></textarea>
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">{{ close_button }}</button>
            <button class="btn btn-primary" type="submit" value="{{ submit_button }}" name="{{ submit_button }}">{{ submit_button }}</button>
        </div>
    </form>
</div>